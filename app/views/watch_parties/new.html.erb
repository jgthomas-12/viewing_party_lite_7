<%= form_with url: "/users/#{@user.id}", local: true, method: :post  do |f| %>
  <%= f.label :date %>
  <%= f.text_field :date %>
  <%= f.label :duration %>
  <%= f.text_field :duration %>
  <%= f.label :start_time %>
  <%= f.text_field :start_time %>

  <%= f.hidden_field :movie_id, value: @movie %>
  
  <% @users.each do |user| %>
    <%= f.check_box :user%> <%= user.name %> <br>
  <% end %>

  <%= f.submit %>
<% end %>

<p> 
Movie: <%= @movie.details[:title] %> <br>
Length: <%= @movie.details[:runtime] %> <br>
Vote Average: <%= @movie.details[:vote_average] %> <br>
</p>